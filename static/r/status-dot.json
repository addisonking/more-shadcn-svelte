{
	"$schema": "https://shadcn-svelte.com/schema/registry-item.json",
	"name": "status-dot",
	"title": "Status Dot",
	"type": "registry:ui",
	"description": "A simple indicator for state, presence, or activity.",
	"devDependencies": [
		"tailwind-variants@^3.1.1"
	],
	"files": [
		{
			"content": "<!-- $lib/components/ui/status-dot/status-dot.svelte -->\r\n<script lang=\"ts\">\r\n    import { cn } from '$UTILS$';\r\n    import { tv, type VariantProps } from 'tailwind-variants';\r\n\r\n    const dotVariants = tv({\r\n        base: 'rounded-full',\r\n        variants: {\r\n            variant: {\r\n                default: 'bg-primary text-primary',\r\n                success: 'bg-emerald-500 text-emerald-500',\r\n                warning: 'bg-amber-500 text-amber-500',\r\n                error: 'bg-rose-500 text-rose-500',\r\n                info: 'bg-sky-500 text-sky-500',\r\n                muted: 'bg-muted-foreground/50 text-muted-foreground/50'\r\n            },\r\n            size: {\r\n                sm: 'h-2 w-2',\r\n                md: 'h-3 w-3',\r\n                lg: 'h-4 w-4'\r\n            }\r\n        },\r\n        defaultVariants: {\r\n            variant: 'default',\r\n            size: 'md'\r\n        }\r\n    });\r\n\r\n    type Variant = VariantProps<typeof dotVariants>['variant'];\r\n    type Size = VariantProps<typeof dotVariants>['size'];\r\n\r\n    let {\r\n        class: className,\r\n        variant = 'default',\r\n        size = 'md',\r\n        pulse = false,\r\n        ...rest\r\n    }: {\r\n        class?: string;\r\n        variant?: Variant;\r\n        size?: Size;\r\n        pulse?: boolean;\r\n        [key: string]: any;\r\n    } = $props();\r\n</script>\r\n\r\n<span\r\n        class={cn('relative flex items-center justify-center', dotVariants({ size }), className)}\r\n        {...rest}\r\n>\r\n\t{#if pulse}\r\n\t\t<span\r\n                class={cn(\r\n\t\t\t\t'absolute inline-flex h-full w-full animate-ping rounded-full opacity-75',\r\n\t\t\t\tdotVariants({ variant, size: undefined }) // Only apply color class, size comes from parent\r\n\t\t\t)}\r\n        ></span>\r\n\t{/if}\r\n    <span\r\n            class={cn(\r\n\t\t\t'relative inline-flex rounded-full',\r\n            // Re-apply size here to ensure the inner dot fills the container\r\n            dotVariants({ variant, size })\r\n\t\t)}\r\n    ></span>\r\n</span>",
			"type": "registry:ui",
			"target": "status-dot/status-dot.svelte"
		},
		{
			"content": "import StatusDot from \"./status-dot.svelte\";\r\n\r\nexport { StatusDot as Root };",
			"type": "registry:ui",
			"target": "status-dot/index.ts"
		}
	]
}